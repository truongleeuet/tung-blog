extends layout

block content
    .container
        a.btn.btn-default.create-post(href='/admin/create-post') Create New Post
        table.table
            thead
                tr
                th Id
                th Title
                th Action
            tbody
                -each post in posts 
                    tr
                        td #{post.id}
                        td #{post.title}
                        td 
                            a(href='/admin/edit/#{post.id}')
                                i.fa.fa-pencil
                            a(href='/admin/delete/#{post.id}')
                                i.fa.fa-trash
                   